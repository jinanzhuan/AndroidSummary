<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--设置背景色-->
        <!--<item name="android:background">@color/white</item>-->
        <!--设置字体颜色-->
        <item name="android:textColor">@color/black</item>
        <!--设置不覆盖锚点，即不覆盖三个点-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="item_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_item_height</item>
        <item name="android:textColor">@color/common_item_color</item>
        <item name="android:textSize">@dimen/common_item_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@drawable/common_item_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="page_item_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:src">@drawable/image01</item>
        <item name="background">@color/red</item>
    </style>

</resources>
