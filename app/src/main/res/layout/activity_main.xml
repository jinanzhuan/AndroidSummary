<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.androidsummary.common.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        app:titleBarDisplayHomeAsUpEnabled="false"
        app:titleBarTitle="summary"/>

    <TextView
        android:id="@+id/tv_android_relation"
        style="@style/item_tv_style"
        android:onClick="androidRelation"
        android:text="Android"/>

    <TextView
        android:id="@+id/tv_java_relation"
        style="@style/item_tv_style"
        android:onClick="javaRelation"
        android:text="Java"/>

    <TextView
        android:id="@+id/tv_libraries_relation"
        style="@style/item_tv_style"
        android:onClick="librariesRelation"
        android:text="Libraries"/>

</LinearLayout>